{
    "name": "NLP Extension",
    "description": "Erasing bad words from the webpage",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "nlp.html",
        "default_icon": "images/hi.png"
    },
    "content_scripts": [
        {
            "power": ["scripts/popup.js"],
            "content": ["scripts/content.js"],
            "matches": ["<all_urls>"],
            "css":["good-word.css"]
        }
    ],
    "web_accessible_resources": [
    {
        "resources": ["data/wordBank.json"],
        "matches": ["<all_urls>"]
    }
    ]
}